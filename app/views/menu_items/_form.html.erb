<%= turbo_frame_tag :new_menu_item do %>
  <%= form_with(model: menu_item) do |form| %>
    <% if menu_item.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(menu_item.errors.count, "error") %> prohibited this menu_item from being saved:</h2>

        <ul>
          <% menu_item.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name, autocomplete: :off %>
    </div>

    <div>
      <%= form.label :price, style: "display: block" %>
      <%= form.text_field :price, autocomplete: :off %>
    </div>

    <div>
      <%= form.hidden_field :menu_id %>
    </div>

    <div>
      <%= form.submit %>
    </div>
  <% end %>
<% end %>
