<div class="flex w-full max-w-[1024px] mx-auto justify-between p-8">
  <div class="flex-1 md:pt-32">
    <div class="max-w-64 mx-auto lg:max-w-fit">
      <h1 class="text-6xl lg:text-9xl font-bold">Menuuu</h1>
      <h2 class="text-2xl lg:text-4xl">Your restaurant's digital menu</h2>

      <div class="py-4 flex gap-4">
        <%= link_to "Create menu", private_menus_path, class: "border-2 border-solid border-black py-1 px-2 text-xl bg-black text-white" %>
        <%= link_to "View demo", public_menu_path(@menu), class: "border-2 border-solid border-black py-1 px-2 text-xl" %>
      </div>

      <div class="py-4 md:opacity-20 hover:opacity-100 transition-opacity max-w-64">
        <%= @qrcode.as_svg(viewbox: [100, 100, 100, 100]).html_safe %>
      </div>
    </div>
  </div>

  <div class="hidden md:block">
    <%= render "phone" do %>
      <%= render "public/menus/menu", menu: @menu %>
    <% end %>
  </div>
</div>
