<div class="flex flex-col lg:flex-row w-full max-w-[1024px] items-center justify-between mx-auto p-8">
  <div class="flex-1">
    <div class="mx-auto lg:max-w-fit flex flex-col items-center justify-center text-center">
      <h1 class="text-[25vw] leading-none md:text-9xl font-bold">
        <%= t('.title') %>
      </h1>
      <h2 class="text-[10vw] leading-none md:text-4xl">
        <%= t('.subtitle') %>
      </h2>

      <ol class="my-8 text-[6vw] md:text-2xl list-decimal list-inside text-left">
        <%= tag.li t('.features_1') %>
        <%= tag.li t('.features_2') %>
        <%= tag.li t('.features_3') %>
      </ol>

      <div class="mb-4 text-[6vw] md:text-2xl">
        <%= link_to t('.make_your_menu'), new_user_registration_path, class: "border-2 border-solid border-black dark:border-white py-1 px-2 bg-black text-white dark:bg-white dark:text-black" %>
        &nbsp;
        <%= link_to t('.see_example'), public_menu_path(@menu), class: "border-2 border-solid border-black dark:border-white py-1 px-2" %>
      </div>

      <div class="hidden lg:block py-4 opacity-10 hover:opacity-100 scale-90 hover:scale-100 transition-all float-right">
        <%= image_tag public_qrcode_path(public_menu_url(@menu)),
                      alt: t('.qr_code_alt'),
                      title: "Scan with your phone to see an example menu",
                      width: 278,
                      height: 278,
                      class: "dark:bg-white dark:border-white dark:border-8 cursor-help" %>
      </div>
    </div>
  </div>

  <div class="w-fit mt-8 origin-top scale-75 sm:scale-100 pointer-events-none select-none">
    <%= render "phone" do %>
      <%= render "public/menus/menu", menu: @menu %>
    <% end %>
  </div>

  <div class="lg:hidden my-16 relative -top-60 sm:top-0">
    <%= link_to t('.make_your_menu'), new_user_registration_path, class: "border-2 border-solid border-black dark:border-white py-1 px-8 text-[10vw] md:text-4xl" %>
  </div>
</div>
