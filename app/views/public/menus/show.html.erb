<% unless @menu.business.menus.one? %>
  <div class="main-content mt-4">
    <%= link_to public_business_path(@menu.business) do %>
      &#10094;
      &nbsp;
      <%= @menu.business.name %>
    <% end %>
  </div>
<% end %>

<%= render "menu", menu: @menu %>

<% if @menu.id == 1 %>
  <div class="fixed bottom-0 w-full">
    <%= render "banner", title: "This is an example menu", icon: :warning, container_class: "bg-green-100", button_class: "text-green-600" do %>
      <%= link_to "Create your own menu", new_user_registration_path %>
    <% end %>
  </div>
<% end %>

<%# Clicking a section link smoothly scrolls to that section and centers the link horizontally. %>
<%# Stimulus.js not available in public pages to be as light as possible. %>
<script>
  document.addEventListener('DOMContentLoaded', function() {
    const links = document.querySelectorAll('nav ul li a');
    links.forEach(function(link) {
      link.addEventListener('click', function(event) {
        event.preventDefault();
        const targetId = link.getAttribute('href').substring(1);
        const targetSection = document.getElementById(targetId);
        targetSection.scrollIntoView({ behavior: 'smooth' });
        link.scrollIntoView({ behavior: 'smooth', block: 'nearest', inline: 'center' });
      });
    });
  });
</script>
